<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_profile_title"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="center"/>

        <!-- Subtitle - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_profile_subtitle"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"/>

        <!-- Profile Image with Edit Icon -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sproffilelo"
                android:contentDescription="@string/profile_image_desc"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:strokeColor="@color/grey"
                app:strokeWidth="1dp"/>

            <!-- Fixed: Added contentDescription and increased touch target size -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/profileImage"
                android:layout_alignEnd="@id/profileImage"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit_profile_image_desc"
                app:backgroundTint="@color/brown"
                app:fabSize="mini"
                app:tint="@color/white"/>
        </RelativeLayout>

        <!-- Name Field - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_label"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <!-- Fixed: Moved hardcoded hint to strings.xml -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:background="@drawable/oval_edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Field - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <!-- Fixed: Moved hardcoded hint to strings.xml -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:background="@drawable/oval_edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Field - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <!-- Fixed: Moved hardcoded hint to strings.xml -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:background="@drawable/oval_edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address Field - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_label"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <!-- Fixed: Moved hardcoded hint to strings.xml -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address_hint"
                android:inputType="textPostalAddress"
                android:background="@drawable/oval_edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number Field - Fixed: Moved hardcoded text to strings.xml -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_label"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <!-- Fixed: Moved hardcoded hint to strings.xml -->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:background="@drawable/oval_edittext_background"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Complete Profile Button - Fixed: Moved hardcoded text to strings.xml -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_profile_button"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</ScrollView>